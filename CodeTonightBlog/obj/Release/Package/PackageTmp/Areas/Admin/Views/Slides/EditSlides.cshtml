@model CodeTonightBlog.DAL.Common.SlideShow
@{
    ViewBag.Title = "EditSlides";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<script src="~/Scripts/angular.min.js"></script>
<style>
    .mytitle {
        position: absolute;
        text-align: center;
        padding: 15%;
    }
</style>


<div class="col-12 grid-margin stretch-card" ng-controller="slidecontroller" ng-app="Slide">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Edit Slides</h4>

            <form class="forms-sample" method="Post" action="@Url.Action("UpdateSlides", "Slides")" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="exampleInputName1">Title</label>
                    <input type="text" class="form-control" name="Title"   value="@Model.Title" id="Title" placeholder="Name">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Tagline</label>
                    <input type="text" class="form-control" name="Tagline" value="@Model.Tagline" id="Tagline" placeholder="Tagline">
                    <input type="text" class="form-control" name="ObjectId"  value="@Model.Id" id="objectid" style="display:none" placeholder="Tagline">
                </div>

                <div class="form-group">
                    <label>File upload</label>
                    <input type="file" custom-on-change="uploadFile" name="img" class="file-upload-default">
                    <div class="input-group col-xs-12">
                        <input type="text" class="form-control file-upload-info" disabled placeholder="Upload Image">
                        <span class="input-group-append">
                            <button class="file-upload-browse btn btn-primary" type="button">Upload</button>
                        </span>
                    </div>
                </div>


                <button type="submit" id="mybutton"  onclick="javascript:document.getElementById('mybutton').setAttribute('disabled','disabled')" class="btn btn-primary mr-2">Update</button>
                <button class="btn btn-light">Cancel</button>
            </form>
        </div>

        <div class="card-body">
            <h4 class="card-title">Your Slide Demo</h4>
            <div class="banner" id="banner">

                <!-- slideshow start -->
                <!-- ================ -->
                <div class="mybanner">

                    <div class="mytitle" style="width:95%;max-width:854px;"><h1 style="color:black">{{Title}} </h1><h4 style="color:orangered">{{Tagline}}</h4></div>
                    <img src="@Url.Content("~/Uploads/" +Model.Logo)" id="myimg" alt="slidebg1" data-bgposition="center top" style="min-width:840px;max-height:500px;max-width:854px;" data-bgfit="cover" data-bgrepeat="no-repeat">
                </div>
                <!-- slideshow end -->

            </div>
        </div>
    </div>
</div>

<script>
    var app = angular.module('Slide', [])

    app.controller('slidecontroller', function ($scope, $http, $window) {

      //  $scope.selectedimage = "@Url.Content("~/Uploads/" +Model.Logo)";
        return false;
        var formData = new FormData();

        $scope.uploadFile = function (event) {
            var files = event.target.files;
            console.log(files);

            document.getElementById('myimg').setAttribute("src", URL.createObjectURL(files[0]));
            document.getElementById('mybutton').removeAttribute("disabled");
            $scope.Fileslected = files;
     };


        app.directive('customOnChange', function () {
            return {
                restrict: 'A',
                link: function (scope, element, attrs) {
                    var onChangeHandler = scope.$eval(attrs.customOnChange);
                    element.on('change', onChangeHandler);
                    element.on('$destroy', function () {
                        element.off();
                    });

                }
            };
        });

    });
</script>

